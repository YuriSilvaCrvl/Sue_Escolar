<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastro de Coordenadores</title>
  </head>
  <body>
    <%- include('navbar') %>
    <h1>Cadastro de Coordenadores</h1>

    <!-- Formulário para adicionar ou editar coordenadores -->
    <form action="/editar_coordenador" method="POST">
      <label for="nome_coordenador">Nome:</label>
      <input type="text" id="nome_coordenador" name="nome_coordenador" required />
      <br />
      <label for="data_nascimento">Data de Nascimento:</label>
      <input type="date" id="data_nascimento" name="data_nascimento" required />
      <br />
      <label for="genero">Gênero:</label>
      <input type="text" id="genero" name="genero" required />
      <br />
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
      <br />
      <label for="tipo_logradouro">Tipo de Logradouro:</label>
      <input type="text" id="tipo_logradouro" name="tipo_logradouro" required />
      <br />
      <label for="logradouro">Logradouro:</label>
      <input type="text" id="logradouro" name="logradouro" required />
      <br />
      <label for="numero">Número:</label>
      <input type="number" id="numero" name="numero" required />
      <br />
      <label for="bairro">Bairro:</label>
      <input type="text" id="bairro" name="bairro" required />
      <br />
      <label for="cidade">Cidade:</label>
      <input type="text" id="cidade" name="cidade" required />
      <br />
      <label for="estado">Estado:</label>
      <input type="text" id="estado" name="estado" required />
      <br />
      <button type="submit" name="action" value="alterar">Alterar</button>
      <button type="submit" name="action" value="incluir">Incluir</button>
      <input type="hidden" id="id_coordenador" name="id_coordenador" />
    </form>

    <!-- Tabela para exibir os coordenadores -->
    <h2>Relação de Coordenadores Cadastrados</h2>
    <table border="1">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Data de Nascimento</th>
          <th>Gênero</th>
          <th>Email</th>
          <th>Tipo Logradouro</th>
          <th>Logradouro</th>
          <th>Número</th>
          <th>Bairro</th>
          <th>Cidade</th>
          <th>Estado</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% coordenadores.forEach(function(coordenador) { %>
        <tr>
          <td><%= coordenador.nome_coordenador %></td>
          <td><%= coordenador.data_nascimento %></td>
          <td><%= coordenador.genero %></td>
          <td><%= coordenador.email %></td>
          <td><%= coordenador.tipo_logradouro %></td>
          <td><%= coordenador.logradouro %></td>
          <td><%= coordenador.numero %></td>
          <td><%= coordenador.bairro %></td>
          <td><%= coordenador.cidade %></td>
          <td><%= coordenador.estado %></td>
          <td>
            <!-- Botão para editar coordenador -->
            <button
              onclick="preencherFormulario('<%= coordenador.nome_coordenador %>', '<%= coordenador.data_nascimento %>', '<%= coordenador.genero %>', '<%= coordenador.email %>', '<%= coordenador.tipo_logradouro %>', '<%= coordenador.logradouro %>', '<%= coordenador.numero %>', '<%= coordenador.bairro %>', '<%= coordenador.cidade %>', '<%= coordenador.estado %>', '<%= coordenador.id_coordenador %>')"
            >
              Editar
            </button>
            <!-- Botão para excluir coordenador -->
            <form
              action="/excluir_coordenador/<%= coordenador.id_coordenador %>"
              method="POST"
              style="display:inline;"
            >
              <button type="submit">Excluir</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

    <script>
      // Função para preencher os campos do formulário ao clicar em editar
      function preencherFormulario(
        nome,
        dataNascimento,
        genero,
        email,
        tipoLogradouro,
        logradouro,
        numero,
        bairro,
        cidade,
        estado,
        coordenadorId
      ) {
        document.getElementById("nome_coordenador").value = nome;
        document.getElementById("data_nascimento").value = dataNascimento;
        document.getElementById("genero").value = genero;
        document.getElementById("email").value = email;
        document.getElementById("tipo_logradouro").value = tipoLogradouro;
        document.getElementById("logradouro").value = logradouro;
        document.getElementById("numero").value = numero;
        document.getElementById("bairro").value = bairro;
        document.getElementById("cidade").value = cidade;
        document.getElementById("estado").value = estado;
        document.getElementById("id_coordenador").value = coordenadorId;
      }
    </script>
  </body>
</html>
